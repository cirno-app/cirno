{
  "name": "cirno",
  "description": "Project management tool for Cordis",
  "version": "0.0.1",
  "packageManager": "yarn@4.3.1",
  "type": "module",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "bin": "lib/cli.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cordiverse/cirno.git"
  },
  "bugs": {
    "url": "https://github.com/cordiverse/cirno/issues"
  },
  "homepage": "https://github.com/cordiverse/cirno",
  "author": "Shigma <shigma10826@gmail.com>",
  "license": "MIT",
  "files": [
    "lib"
  ],
  "scripts": {
    "compile:core": "esbuild src/index.ts --outfile=lib/index.js --bundle --platform=node",
    "compile:cli": "esbuild src/cli.ts --outfile=lib/cli.js --bundle --platform=node --external:./index.js",
    "compile": "yarn compile:core && yarn compile:cli",
    "build": "yarn compile && yarn tsc -b",
    "lint": "eslint --cache",
    "test": "node --import tsx --test tests/*.spec.ts",
    "test:text": "shx rm -rf coverage && c8 -r text yarn test",
    "test:json": "shx rm -rf coverage && c8 -r json yarn test",
    "test:html": "shx rm -rf coverage && c8 -r html yarn test"
  },
  "devDependencies": {
    "@cordisjs/eslint-config": "^1.1.1",
    "@types/chai": "^4.3.16",
    "@types/node": "^20.14.11",
    "c8": "^7.14.0",
    "chai": "^5.1.1",
    "cordis": "^3.17.7",
    "esbuild": "^0.23.0",
    "esbuild-register": "^3.5.0",
    "eslint": "^8.57.0",
    "shx": "^0.3.4",
    "tsx": "^4.16.3",
    "typescript": "^5.5.3"
  },
  "dependencies": {
    "js-yaml": "^4.1.0"
  }
}
